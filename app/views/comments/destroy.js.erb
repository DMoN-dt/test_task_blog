<% if(@too_late) %>
  alert('Удалить комментарий уже нельзя!\n\nПрошло более 15 минут с момента создания комментария.');
<% else %>
  obj = $(".comment[data-id='<%=@comment_id %>']");
  if(obj.length == 1){
    form_obj = $("form#edit_comment", obj);
    if(form_obj.length == 1){
      form_obj.detach();
	  form_obj.addClass('hidden-xs-up');
	  form_obj.appendTo($(".write-comment"));
    }
	obj.remove();
  }
  alert('Комментарий успешно удалён.');
<% end %>
